<header class="mb-5">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path('admin_dashboard') }}">Mon projet</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item{% if activeMenu == 'dashboard' %} active{% endif %}">
                    <a class="nav-link" href="{{ path('admin_dashboard') }}">
                        <i class="fas fa-chart-line"></i>
                        Dashboard
                    </a>
                </li>
                <li class="nav-item{% if activeMenu == 'user' %} active{% endif %}">
                    <a class="nav-link" href="{{ path('admin_user_index') }}">
                        <i class="fas fa-users"></i>
                        Utilisateurs
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="{{ path('home') }}" target="_blank" class="nav-link">
                        <i class="fas fa-eye"></i>
                        Voir le site
                    </a>
                </li>
                {% if app.user %}
                    <li class="nav-item dropdown active">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropDownList">
                            {{ app.user.fullName }}
                        </a>

                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDropDownList">
                            <a href="{{ path('admin_account_logout') }}" class="dropdown-item">DÃ©connexion</a>
                        </div>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>

{% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}